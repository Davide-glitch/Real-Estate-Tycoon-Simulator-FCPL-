<!-- Single Rent to Tenant Modal -->
<div class="modal fade" id="rentToTenantModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="RentProperty">
                <div class="modal-header">
                    <h5 class="modal-title">Rent Property to Tenant</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="rentPropertyId2" />
                    <div class="mb-3">
                        <label for="rentDuration" class="form-label">Rental Duration</label>
                        <select class="form-select" id="rentDuration" name="duration" required>
                            <option value="">Select duration...</option>
                            @foreach (var d in GameConstants.RentalDurations)
                            {
                                <option value="@d">@d months</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="tenantName" class="form-label">Tenant Name</label>
                        <input type="text" class="form-control" id="tenantName" name="tenantName" placeholder="Enter tenant name" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Rent Property</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
// Handle Set Rent Modal
document.getElementById('setRentModal').addEventListener('show.bs.modal', function(e) {
    const button = e.relatedTarget;
    const propertyId = button.getAttribute('data-property-id');
    const rentPrice = button.getAttribute('data-rent-price');
    document.getElementById('rentPropertyId').value = propertyId;
    document.getElementById('rentPrice').value = rentPrice;
    document.getElementById('currentRent').textContent = '$' + parseFloat(rentPrice).toFixed(0);
});

// Handle Set Sale Modal
document.getElementById('setSaleModal').addEventListener('show.bs.modal', function(e) {
    const button = e.relatedTarget;
    const propertyId = button.getAttribute('data-property-id');
    const salePrice = button.getAttribute('data-sale-price');
    const marketValue = button.getAttribute('data-market-value');
    document.getElementById('salePropertyId').value = propertyId;
    document.getElementById('salePrice').value = salePrice;
    document.getElementById('marketValue').textContent = '$' + parseFloat(marketValue).toFixed(0);
});

// Handle Rent to Tenant Modal
document.getElementById('rentToTenantModal').addEventListener('show.bs.modal', function(e) {
    const button = e.relatedTarget;
    const propertyId = button.getAttribute('data-property-id');
    document.getElementById('rentPropertyId2').value = propertyId;
    document.getElementById('rentDuration').value = '';
    document.getElementById('tenantName').value = '';
});
</script>
