@page
@using DavidEstateArchitect.Models
@model DavidEstateArchitect.Pages.GameModel
@{
    ViewData["Title"] = "Real Estate Tycoon";
}

<div class="mb-4 text-center">
    <h1 class="display-3 fw-bold mb-3">
        <i class="bi bi-trophy-fill text-warning" style="font-size: 3.5rem;"></i>
        <span class="d-block mt-2"
            style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Real
            Estate Tycoon</span>
    </h1>
    <p class="lead text-muted fs-4">Build your empire one property at a time</p>
    <div class="mt-3 d-flex gap-2 justify-content-center flex-wrap">
        <a href="/" class="btn btn-primary shadow-sm" style="min-width: 140px; font-weight: 600;">
            <i class="bi bi-house-door-fill"></i> Back to Home
        </a>
        <button class="btn btn-info shadow-sm" style="min-width: 140px; font-weight: 600;" onclick="location.reload()">
            <i class="bi bi-arrow-clockwise"></i> Refresh
        </button>
        <form method="post" class="d-inline">
            <button type="submit" asp-page-handler="TogglePause"
                class="btn @(Model.IsPaused ? "btn-success" : "btn-warning") shadow-sm"
                style="min-width: 140px; font-weight: 600; pointer-events: auto !important; z-index: 9999 !important; position: relative !important;">
                <i class="bi @(Model.IsPaused ? "bi-play-fill" : "bi-pause-fill")"></i> @(Model.IsPaused ? "Resume Game"
                                : "Pause Game")
            </button>
        </form>
        <form method="post" class="d-inline">
            <button type="submit" asp-page-handler="ResetGame" class="btn btn-danger shadow-sm"
                style="min-width: 140px; font-weight: 600; pointer-events: auto !important; z-index: 9999 !important; position: relative !important;"
                onclick="return confirm('Are you sure you want to reset the game? This cannot be undone.');">
                <i class="bi bi-arrow-repeat"></i> Reset Game
            </button>
        </form>
    </div>
</div>

<div class="row g-4 mb-5">
    <div class="col-lg-3 col-md-6">
        <div class="card border-0 shadow-lg h-100 hover-lift"
            style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 20px;">
            <div class="card-body text-white p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="text-uppercase opacity-75 mb-0 fw-bold" style="letter-spacing: 1px;">Balance</h6>
                    <div class="bg-white bg-opacity-25 rounded-circle p-2">
                        <i class="bi bi-cash-stack fs-3"></i>
                    </div>
                </div>
                <h2 class="mb-0 fw-bold display-6">@Model.Balance.ToString("C0")</h2>
                <small class="opacity-75 mt-2 d-block"><i class="bi bi-graph-up"></i> Your available funds</small>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card border-0 shadow-lg h-100 hover-lift"
            style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); border-radius: 20px;">
            <div class="card-body text-white p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="text-uppercase opacity-75 mb-0 fw-bold" style="letter-spacing: 1px;">Round</h6>
                    <div class="bg-white bg-opacity-25 rounded-circle p-2">
                        <i class="bi bi-clock-history fs-3"></i>
                    </div>
                </div>
                <h2 class="mb-0 fw-bold display-6">#@Model.Round</h2>
                <small class="opacity-75 mt-2 d-block"><i class="bi bi-arrow-repeat"></i> Updates every 10s</small>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card border-0 shadow-lg h-100 hover-lift"
            style="background: linear-gradient(135deg, #3498db 0%, #2980b9 100%); border-radius: 20px;">
            <div class="card-body text-white p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="text-uppercase opacity-75 mb-0 fw-bold" style="letter-spacing: 1px;">Properties</h6>
                    <div class="bg-white bg-opacity-25 rounded-circle p-2">
                        <i class="bi bi-house-fill fs-3"></i>
                    </div>
                </div>
                <h2 class="mb-0 fw-bold display-6">@Model.Owned.Count</h2>
                <small class="opacity-75 mt-2 d-block"><i class="bi bi-building"></i> In your portfolio</small>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card border-0 shadow-lg h-100 hover-lift"
            style="background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%); border-radius: 20px;">
            <div class="card-body text-white p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="text-uppercase opacity-75 mb-0 fw-bold" style="letter-spacing: 1px;">Active Offers</h6>
                    <div class="bg-white bg-opacity-25 rounded-circle p-2">
                        <i class="bi bi-people-fill fs-3"></i>
                    </div>
                </div>
                <h2 class="mb-0 fw-bold display-6">@Model.Offers.Count</h2>
                <small class="opacity-75 mt-2 d-block"><i class="bi bi-person-check"></i> Buyers & Tenants</small>
            </div>
        </div>
    </div>
</div>

<!-- Market Events Banner -->
@{
    var activeEvents = Model.ActiveEvents;
    var hasActiveEvents = activeEvents != null && activeEvents.Any();
}
@if (hasActiveEvents)
{
    <div class="market-event-banner text-white mb-4">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
            <div class="d-flex align-items-center gap-3">
                <i class="bi bi-megaphone-fill fs-2"></i>
                <div>
                    <h5 class="mb-1 fw-bold">üî• Active Market Events</h5>
                    <p class="mb-0 small opacity-90">These events are currently affecting the market</p>
                </div>
            </div>
            <span class="badge bg-white text-danger fs-6 px-3 py-2">@activeEvents!.Count Live</span>
        </div>
        <div class="mt-3">
            @foreach (var evt in activeEvents!)
            {
                <div class="bg-white bg-opacity-20 rounded p-3 mb-2">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="fw-bold mb-1">@evt.Title</h6>
                            <p class="mb-1 small">@evt.Description</p>
                            @if (evt.AffectedCounty != null)
                            {
                                <span class="badge bg-warning text-dark">üìç @evt.AffectedCounty</span>
                            }
                            else
                            {
                                <span class="badge bg-info">üåç All Counties</span>
                            }
                        </div>
                        <div class="text-end">
                            <div class="badge @(evt.ImpactMultiplier > 1.0m ? "bg-success" : "bg-danger") mb-1">
                                @((evt.ImpactMultiplier - 1.0m) > 0 ? "+" : "")@((evt.ImpactMultiplier - 1.0m).ToString("P0"))
                            </div>
                            <div><small class="opacity-90">@evt.RoundsRemaining rounds left</small></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

<!-- Victory/Defeat Conditions -->
@if (Model.NetWorth >= 1000000)
{
    <div class="alert alert-success border-0 shadow-lg mb-4"
        style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
        <div class="d-flex align-items-center gap-3">
            <i class="bi bi-trophy-fill text-white" style="font-size: 3rem;"></i>
            <div class="text-white">
                <h4 class="alert-heading fw-bold mb-2">üéâ MILLIONAIRE STATUS ACHIEVED! üéâ</h4>
                <p class="mb-2">Congratulations! You've reached $1,000,000 net worth and become a real estate tycoon!</p>
                <p class="mb-0"><strong>Final Stats:</strong> Round @Model.Round | Properties: @Model.Owned.Count | Balance:
                    @Model.Balance.ToString("C0")</p>
                <a asp-page="/Statistics" class="btn btn-light btn-sm mt-2 fw-bold">View Final Statistics</a>
            </div>
        </div>
    </div>
}
else if (Model.Balance < 0)
{
    <div class="alert alert-danger border-0 shadow-lg mb-4">
        <div class="d-flex align-items-center gap-3">
            <i class="bi bi-exclamation-triangle-fill" style="font-size: 3rem;"></i>
            <div>
                <h4 class="alert-heading fw-bold">‚ö†Ô∏è BANKRUPTCY WARNING!</h4>
                <p class="mb-0">Your balance is negative! Sell properties or secure funding to recover.</p>
            </div>
        </div>
    </div>
}
else if (Model.NetWorth >= 500000)
{
    <div class="alert alert-info border-0 shadow mb-4">
        <div class="d-flex align-items-center gap-2">
            <i class="bi bi-star-fill text-warning fs-4"></i>
            <strong>You're halfway to becoming a millionaire!</strong>
            <span class="ms-auto badge bg-primary">@((Model.NetWorth / 1000000m).ToString("P0")) to goal</span>
        </div>
    </div>
}

<div class="row g-3 mb-4">
    <div class="col-lg-8">
        @if (Model.IsPaused)
        {
            <div class="alert alert-warning border-0 shadow-sm d-flex align-items-center mb-3" role="alert">
                <i class="bi bi-pause-circle-fill fs-4 me-3"></i>
                <div>
                    <strong>Game Paused!</strong> The game engine is paused. Click "Resume Game" to continue playing.
                </div>
            </div>
        }
        <div class="alert alert-primary border-0 shadow-sm d-flex align-items-center mb-0" role="alert">
            <i class="bi bi-info-circle-fill fs-4 me-3"></i>
            <div>
                <strong>Auto-Update:</strong> The game updates automatically every 10 seconds. Refresh the page to see
                new estates and offers!
                <div class="mt-1 small">
                    <span class="badge bg-primary">Net Worth: $@Model.NetWorth.ToString("N0")</span>
                    <span class="badge bg-info">Active Rentals: @Model.ActiveRentals</span>
                    <span class="badge bg-success">Property Value: $@Model.TotalPropertyValue.ToString("N0")</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="d-grid gap-2">
            <a asp-page="/Statistics" class="btn btn-warning btn-lg">
                <i class="bi bi-graph-up-arrow"></i> View Detailed Statistics
            </a>
        </div>
    </div>
</div>

@if (hasActiveEvents)
{
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header py-3" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
            <h5 class="mb-0 text-white">
                <i class="bi bi-megaphone"></i> Active Market Events (@Model.ActiveEvents.Count)
            </h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                    @foreach (var evt in activeEvents!)
                {
                    <div class="col-md-6">
                        <div class="alert mb-0"
                            style="background-color: @(evt.ImpactMultiplier > 1 ? "#d4edda" : evt.ImpactMultiplier < 1 ? "#f8d7da" : "#d1ecf1"); border-left: 4px solid @(evt.ImpactMultiplier > 1 ? "#28a745" : evt.ImpactMultiplier < 1 ? "#dc3545" : "#17a2b8");">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="alert-heading mb-1">
                                        @if (evt.ImpactMultiplier > 1)
                                        {
                                            <i class="bi bi-arrow-up-circle-fill text-success"></i>
                                        }
                                        else if (evt.ImpactMultiplier < 1)
                                        {
                                            <i class="bi bi-arrow-down-circle-fill text-danger"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-info-circle-fill text-info"></i>
                                        }
                                        @evt.Title
                                    </h6>
                                    <p class="mb-2 small">@evt.Description</p>
                                    <div class="d-flex gap-2 flex-wrap">
                                        @if (evt.AffectedCounty != null)
                                        {
                                            <span class="badge bg-secondary">@evt.AffectedCounty</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-dark">All Counties</span>
                                        }
                                        <span class="badge bg-light text-dark">@evt.RoundsRemaining rounds left</span>
                                    </div>
                                </div>
                                <div class="text-end">
                                    @{
                                        var impactPct = (evt.ImpactMultiplier - 1) * 100;
                                    }
                                    <span class="badge"
                                        style="background-color: @(evt.ImpactMultiplier > 1 ? "#28a745" : evt.ImpactMultiplier < 1 ? "#dc3545" : "#6c757d"); font-size: 0.9rem;">
                                        @(impactPct > 0 ? "+" : "")@(impactPct.ToString("F0"))%
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

<div id="market" class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-primary text-white py-3 d-flex align-items-center justify-content-between flex-wrap gap-2">
        <h4 class="mb-0"><i class="bi bi-shop"></i> Available Estates (For Sale)</h4>
        <div>
            <form method="post" class="d-inline">
                <button type="submit" asp-page-handler="QuickBuy" class="btn btn-light btn-sm shadow-sm"
                    disabled="@Model.IsPaused">Buy Starter Property</button>
            </form>
        </div>
    </div>
    <div class="card-body border-bottom bg-light">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="SearchCity" class="form-label fw-semibold text-dark">City</label>
                <input type="text" id="SearchCity" name="SearchCity" value="@Model.SearchCity" class="form-control"
                    placeholder="e.g. Riverton" />
            </div>
            <div class="col-md-4">
                <label for="SearchCounty" class="form-label fw-semibold text-dark">County</label>
                <select asp-for="SearchCounty" class="form-select" asp-items="Model.CountyOptions" id="SearchCounty">
                    <option value="">All counties</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="SearchLocation" class="form-label fw-semibold text-dark">Location Type</label>
                <select asp-for="SearchLocation" class="form-select" asp-items="Model.LocationOptions" id="SearchLocation">
                    <option value="">All locations</option>
                </select>
            </div>
            <div class="col-md-1 d-flex gap-2">
                <button type="submit" class="btn btn-primary flex-grow-1">
                    <i class="bi bi-search"></i>
                </button>
                <a asp-page="/Game" class="btn btn-outline-secondary" title="Clear filters">
                    <i class="bi bi-x-circle"></i>
                </a>
            </div>
        </form>
        @if (!string.IsNullOrWhiteSpace(Model.SearchCity) || !string.IsNullOrWhiteSpace(Model.SearchCounty) || Model.SearchLocation.HasValue)
        {
            <small class="text-muted d-block mt-2">Filters applied. Showing up to 60 matching properties.</small>
        }
    </div>
    @if (Model.ForSale.Any())
    {
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>County</th>
                            <th>Type</th>
                            <th>Location</th>
                            <th>Safety</th>
                            <th>City</th>
                            <th>Price</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model.ForSale)
                        {
                            <tr>
                                <td><span class="badge bg-secondary">@p.County</span></td>
                                <td>
                                    @if (p.Type == EstateType.Apartment)
                                    {
                                        <span class="badge bg-info"><i class="bi bi-building"></i> @p.Type</span>
                                    }
                                    else if (p.Type == EstateType.House)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-house-door"></i> @p.Type</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-star-fill"></i> @p.Type</span>
                                    }
                                </td>
                                <td>@p.Location</td>
                                <td>
                                    @if (p.Safety == SafetyLevel.Safe)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-shield-check"></i> Safe</span>
                                    }
                                    else if (p.Safety == SafetyLevel.Moderate)
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-shield"></i> Moderate</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger"><i class="bi bi-shield-x"></i> Risky</span>
                                    }
                                </td>
                                <td>@p.City</td>
                                <td class="fw-bold">@p.Price.ToString("C0")</td>
                                <td class="text-center">
                                    @{
                                        var state = Model; // shorthand
                                        var affordable = Model.Balance >= p.Price;
                                        var canAct = !Model.IsPaused && affordable;
                                    }
                                    <form method="post" asp-page-handler="Buy">
                                        <input type="hidden" name="id" value="@p.Id" />
                                        <button type="submit" class="btn btn-success btn-lg action-btn" @(canAct ? "" : "disabled")>
                                            @if (!affordable)
                                            {
                                                <i class="bi bi-lock-fill me-1"></i>
                                            }
                                            @if (Model.IsPaused)
                                            {
                                                <i class="bi bi-pause-fill me-1"></i>
                                            }
                                            BUY
                                        </button>
                                    </form>
                                    @if (Model.Balance < p.Price)
                                    {
                                        <div class="small text-muted mt-1">Insufficient funds</div>
                                    }
                                    else if (p.Price <= 10000m)
                                    {
                                        <div class="small text-success mt-1">Starter Deal</div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="card-body">
            <div class="alert alert-info mb-0">
                <i class="bi bi-info-circle"></i> No properties match your current filters. Try broadening your search.
            </div>
        </div>
    }
</div>

<div id="owned" class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-success text-white py-3">
        <h4 class="mb-0"><i class="bi bi-house-check"></i> My Properties (@Model.Owned.Count)</h4>
    </div>
    <div class="card-body p-0">
        @if (Model.Owned.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>County</th>
                            <th>Type</th>
                            <th>Safety</th>
                            <th>Monthly Rent</th>
                            <th>Status</th>
                            <th>Renovations</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model.Owned)
                        {
                            <tr>
                                <td><span class="badge bg-secondary">@p.County</span></td>
                                <td>
                                    @if (p.Type == EstateType.Apartment)
                                    {
                                        <span class="badge bg-info"><i class="bi bi-building"></i> @p.Type</span>
                                    }
                                    else if (p.Type == EstateType.House)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-house-door"></i> @p.Type</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-star-fill"></i> @p.Type</span>
                                    }
                                </td>
                                <td>
                                    @if (p.Safety == SafetyLevel.Safe)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-shield-check"></i> Safe</span>
                                    }
                                    else if (p.Safety == SafetyLevel.Moderate)
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-shield"></i> Moderate</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger"><i class="bi bi-shield-x"></i> Risky</span>
                                    }
                                </td>
                                <td class="fw-bold">@p.MonthlyRent.ToString("C0")</td>
                                <td>
                                    @if (p.Status == EstateStatus.Rented)
                                    {
                                        <span class="badge bg-primary">Rented</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Available</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-hammer"></i> Level @p.RenovationLevel
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex flex-column gap-2">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <form method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@p.Id" />
                                                <button type="submit" asp-page-handler="Renovate"
                                                    class="btn btn-warning text-dark btn-sm"
                                                    style="font-weight: 600;"
                                                    disabled="@(Model.IsPaused || Model.Balance < 5000)">
                                                    <i class="bi bi-hammer-fill"></i> Upgrade
                                                </button>
                                            </form>
                                            <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal"
                                                data-bs-target="#setRentModal" data-property-id="@p.Id" data-rent-price="@p.MonthlyRent"
                                                style="font-weight: 600;"
                                                disabled="@Model.IsPaused">
                                                <i class="bi bi-currency-dollar"></i> Set Rent
                                            </button>
                                            <button type="button" class="btn btn-secondary btn-sm" data-bs-toggle="modal"
                                                data-bs-target="#setSaleModal" data-property-id="@p.Id" data-sale-price="@p.Price" data-market-value="@p.MarketValue"
                                                style="font-weight: 600;"
                                                disabled="@Model.IsPaused">
                                                <i class="bi bi-tag"></i> Set Price
                                            </button>
                                        </div>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <form method="post" class="d-inline" style="width: 100%;">
                                                <input type="hidden" name="id" value="@p.Id" />
                                                <button type="submit" asp-page-handler="SellProperty"
                                                    class="btn btn-danger btn-sm w-100"
                                                    style="font-weight: 600;"
                                                    disabled="@Model.IsPaused">
                                                    <i class="bi bi-cash-stack"></i> Sell
                                                </button>
                                            </form>
                                            <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal"
                                                data-bs-target="#rentToTenantModal" data-property-id="@p.Id"
                                                style="font-weight: 600; flex: 1;"
                                                disabled="@Model.IsPaused">
                                                <i class="bi bi-key-fill"></i> Rent
                                            </button>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="p-4 text-center text-muted">
                <i class="bi bi-house-slash fs-1 d-block mb-3"></i>
                <p>You don't own any properties yet. Start by purchasing from the market above!</p>
            </div>
        }
    </div>
</div>

<!-- Single Set Rent Modal -->
<div class="modal fade" id="setRentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="SetRent">
                <div class="modal-header">
                    <h5 class="modal-title">Set Monthly Rent Price</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="rentPropertyId" />
                    <div class="mb-3">
                        <label for="rentPrice" class="form-label">Monthly Rent Amount ($)</label>
                        <input type="number" class="form-control" id="rentPrice" name="rentPrice" min="10" max="50000" required>
                        <small class="text-muted">Current: <span id="currentRent">$0</span></small>
