<h3>Offers (Buyers/Tenants)</h3>
<table class="table table-sm table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>County</th>
            <th>Desired</th>
            <th>Offer</th>
            <th>Alt</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model.Offers)
        {
            <tr>
                <td>@o.Name</td>
                <td>@o.Type</td>
                <td>@o.DesiredCounty</td>
                <td>@o.DesiredType / @o.DesiredSafety</td>
                <td>@o.OfferAmount.ToString("C0")</td>
                <td>
                    @if (o.HasAlternative)
                    {<text>@o.AlternativeSafety / @o.AlternativeAmount.ToString("C0")</text>}
                </td>
                <td>
                    <form method="post" class="d-flex gap-1">
                        <input type="hidden" name="id" value="@o.Id" />
                        <select name="propertyId" class="form-select form-select-sm">
                            <option value="">Select property</option>
                            @foreach (var p in Model.Owned.Where(p => p.Status == EstateStatus.Owned && p.County == o.DesiredCounty && p.Type == o.DesiredType && p.Safety == o.DesiredSafety))
                            {
                                <option value="@p.Id">#@p.Id - @p.Type (@p.Safety)</option>
                            }
                        </select>
                        @if (o.Type == PersonType.Buyer)
                        {
                            <button formaction="?handler=Sell" class="btn btn-sm btn-success">Sell</button>
                        }
                        else
                        {
                            <select name="duration" class="form-select form-select-sm">
                                @foreach (var d in EstateArchitect.Models.GameConstants.RentalDurations)
                                {
                                    <option value="@d">@d mo</option>
                                }
                            </select>
                            <button formaction="?handler=Rent" class="btn btn-sm btn-success">Rent</button>
                        }
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
