            <th>Safety</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.ForSale)
        {
            <tr>
                <td>@p.County</td>
                <td>@p.Type</td>
                <td>@p.Location</td>
                <td>@p.Safety</td>
                <td>@p.Price.ToString("C0")</td>
                <td>
                    <form method="post">
                        <input type="hidden" name="id" value="@p.Id" />
                        <button formaction="?handler=Buy" class="btn btn-sm btn-primary">Buy</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

