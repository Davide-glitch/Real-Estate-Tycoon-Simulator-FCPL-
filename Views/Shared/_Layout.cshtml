<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EstateArchitect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DavidEstateArchitect.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-gradient shadow-sm mb-4"
            style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-building"></i> EstateArchitect
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Game">
                                <i class="bi bi-joystick"></i> Play Tycoon
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Statistics">
                                <i class="bi bi-graph-up-arrow"></i> Statistics
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">
                                <i class="bi bi-list-ul"></i> Browse Properties
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="About">
                                <i class="bi bi-info-circle"></i> About
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-5 py-5 text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-building"></i> EstateArchitect
                    </h5>
                    <p class="opacity-90">Build your real estate empire from the ground up. Buy, renovate, rent, and
                        sell properties across 10 counties to become a millionaire!</p>
                    <div class="d-flex gap-2">
                        <span class="badge bg-light text-primary">v1.0</span>
                        <span class="badge bg-light text-primary">ASP.NET Core</span>
                        <span class="badge bg-light text-primary">SQLite</span>
                    </div>
                </div>

                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-area="" asp-controller="Home" asp-action="Index"
                                class="text-white text-decoration-none opacity-90 hover-underline">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-page="/Game" class="text-white text-decoration-none opacity-90 hover-underline">
                                <i class="bi bi-joystick"></i> Play Game
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-page="/Statistics"
                                class="text-white text-decoration-none opacity-90 hover-underline">
                                <i class="bi bi-graph-up-arrow"></i> Statistics
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-area="" asp-controller="Home" asp-action="About"
                                class="text-white text-decoration-none opacity-90 hover-underline">
                                <i class="bi bi-info-circle"></i> About
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="col-md-2">
                    <h6 class="fw-bold mb-3">Game Info</h6>
                    <ul class="list-unstyled small opacity-90">
                        <li class="mb-2">🏠 3 Property Types</li>
                        <li class="mb-2">📍 10 Counties</li>
                        <li class="mb-2">⏱️ 10s Rounds</li>
                        <li class="mb-2">🎯 $1M Goal</li>
                        <li class="mb-2">📊 Real-time Stats</li>
                    </ul>
                </div>

                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Features</h6>
                    <ul class="list-unstyled small opacity-90">
                        <li class="mb-2">✅ Buy & Sell Properties</li>
                        <li class="mb-2">✅ Rental Contracts</li>
                        <li class="mb-2">✅ Property Renovations</li>
                        <li class="mb-2">✅ Market Events</li>
                        <li class="mb-2">✅ Dynamic Economy</li>
                    </ul>
                </div>
            </div>

            <hr class="my-4 bg-white opacity-25" />

            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0 small opacity-75">&copy; 2025 EstateArchitect - Real Estate Tycoon Simulator. All
                        rights reserved.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy"
                        class="text-white text-decoration-none small opacity-75 hover-underline">
                        Privacy Policy
                    </a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>